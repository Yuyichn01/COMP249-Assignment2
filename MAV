package fifthPackage;

import fourthPackage.UAV;

public class MAV extends UAV {
	// The model of MAV
	public String model;

	// The size of MAV
	public double size;

	// The default constructor
	public MAV() {
		// Initialize the size to 0
		this.size = 0;

		// Initialize the model
		this.model = " ";
	}

	// The parameter constructor
	public MAV(double size, String model) {
		// Assign the size value
		this.size = size;

		// Assign the model value
		this.model = model;
	}

	// The copy constructor
	public MAV(MAV mav) {
		// Copy the size value
		this.size = mav.size;

		// Copy the model value
		this.model = mav.model;
	}

	// Getter method of size
	public double getSize() {
		return this.size;
	}

	// Getter method of model
	public String getModel() {
		return this.model;
	}

	// Setter method of size
	public void setSize(double size) {
		this.size = size;
	}

	// Setter method of model
	public void setModel(String model) {
		this.model = model;
	}

	// toString method
	public String toString(UAV uav, MAV mav) {
		return "The weight of this UAV is " + uav.weight + "and the price of this UAV is " + uav.price
				+ ". The model of this MAV is " + mav.model + " and the size of this MAV is " + mav.size;
	}

	// equals method
	public boolean equals(MAV mav, UAV uav, AgriculturalDrone agdrone) {
		return (super.equals(mav) && super.equals(uav) && super.equals(agdrone));
	}

}
