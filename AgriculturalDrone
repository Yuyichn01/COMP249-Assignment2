package fifthPackage;

import fourthPackage.UAV;

public class AgriculturalDrone extends UAV {

	// The brand of Agricultural Drone
	public String brand;

	// The carry capacity of Agricultural Drone
	public int carryCapacity;

	// The default constructor
	public AgriculturalDrone() {

		this.brand = " ";
		this.carryCapacity = 0;
	}

	// The parameter constructor
	public AgriculturalDrone(int carryCapacity, String brand) {
				
				this.brand = brand;

				
				this.carryCapacity = carryCapacity;
			}

	// The copy constructor
	public AgriculturalDrone(AgriculturalDrone agDrone) {
				
				this.brand = agDrone.brand;

				
				this.carryCapacity = agDrone.carryCapacity;
			}

	// Getter method of brand
	public String getBrand() {
		return this.brand;
	}

	// Getter method of carry capacity
	public int getCarryCapacity() {
		return this.carryCapacity;
	}

	// Setter method of brand
	public void setSize(String brand) {
		this.brand = brand;
	}

	// Setter method of carry capacity
	public void setCarryCapacity(int carryCapacity) {
		this.carryCapacity = carryCapacity;
	}

	// toString method
	public String toString(AgriculturalDrone agDrone) {
		return "The band of this AgriculturalDrone is " + agDrone.brand + " and the carryCapacity of this AgriculturalDrone is " + agDrone.carryCapacity;
	}

}
